    Program to print the prime number from1 to 100-->
    <Window x:Class="Assignment6Group5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment6Group5"
        mc:Ignorable="d"
        Title="Prime Number Generator" Height="350" Width="525">
    <!--Grid Definition-->
        <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
            <!--Label for title of the window-->
        <Label Name="lblTitle"
               Content="Prime Number Generator"
               Margin="10"
               Grid.Row="0"
               VerticalAlignment="Center" HorizontalAlignment="Center"
               FontSize="28"/>
            <!--Listbox to display all the prime number-->
        <ListBox Name="lstResult"
                 Grid.Row="1"
                 Margin="10"/>
    </Grid>
</Window>
